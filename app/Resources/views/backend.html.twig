{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('plugins/lightbox/css/lightbox.css') }}"
          rel="stylesheet" type="text/css" />
    <link href="{{ asset('plugins/jquery-ui/jquery-ui.min.css') }}"
          rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/app/Backend/css/backend.css') }}"
          rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('plugins/jquery/jquery-2.1.0.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('plugins/jquery-ui/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('plugins/lightbox/js/lightbox-2.6.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('plugins/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('plugins/history/history.adapter.jquery.js') }}"></script>
    <script src="{{ asset('plugins/history/history.js') }}"></script>
    <script src="{{ asset('bundles/app/Backend/js/backend.js') }}"></script>
{% endblock %}
{% block body %}
    <div id="header">
        <a style="text-decoration:none;" href="{{path('backend_home')}}"><h1>CocinamosTodos <small>Backend</small></h1></a>
    </div>
    <div class="container">
        <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
                <div class="btn-group">
                    <button type="button" class="btn btn-default ajax-url"  data-url = "{{ path('backend_category_index') }}">Category</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a class="ajax-url" data-url = "{{ path('backend_category_index') }}">List</a></li>
                        <li><a class="ajax-url" data-url = "{{ path('backend_category_new') }}">New</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-default ajax-url"  data-url = "{{ path('backend_recipe_index') }}">Recipe</button>
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a class="ajax-url" data-url = "{{ path('backend_recipe_index') }}">List</a></li>
                        <li><a class="ajax-url" data-url = "{{ path('backend_recipe_new') }}">New</a></li>
                    </ul>
                </div>
            </ul>
        </div>
    {#{% include ':includes:flashes.html.twig' %}#}
        <div class="col-sm-9  col-md-10 replace-container" >
            <article>
                {% block article %}{% endblock %}
            </article>
        </div>
    </div>

{% endblock %}